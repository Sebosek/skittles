@using Skittles.Services
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - skittles</title>

    <link rel="stylesheet" href="~/atom-one-dark.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/components.css" />
</head>
<body class="skittles-components preload">
    <aside class="skittles-components-aside">
        <div>
            <a class="skittles-components-logo" href="#">
                <svg class="icon skittles-components-logo-icon-1"><use xlink:href="#flask" /></svg>
                <svg class="icon skittles-components-logo-icon-2"><use xlink:href="#gamepad" /></svg>
                <svg class="icon skittles-components-logo-icon-3"><use xlink:href="#heart" /></svg>
            </a>
            <div class="skittles-components-name">
                <a href="#">A component library</a>
            </div>
            <div class="skittles-components-search">
                <label class="input input--disabled">
                    <div class="input__envelope">
                        <span class="input__icon">
                            <svg class="icon"><use xlink:href="#ghost" /></svg>
                        </span>
                        <input class="input__control" type="text">
                    </div>
                </label>
            </div>
            <nav class="skittles-components-navigation">
                <ul>
                    <li><a class="skittles-components-navigation__topic" href="/">Introduction</a></li>
                    <li id="philosophy">
                        <a class="skittles-components-navigation__topic" href="#philosophy">
                            <span>Philosophy</span>
                            <span class="skittles-components-navigation__icon">
                                <svg class="icon"><use xlink:href="#chevron-down"></use></svg>
                            </span>
                        </a>
                        <ul>
                            <li><a asp-page="./index" asp-route-url="colors" asp-fragment="philosophy">Colors</a></li>
                            <li><a asp-page="./index" asp-route-url="code-guidelines" asp-fragment="philosophy">Code guidelines</a></li>
                            <li><a asp-page="./index" asp-route-url="typography" asp-fragment="philosophy">Typography</a></li>
                            <!-- <li><a asp-page="./index" asp-route-url="animations" asp-fragment="philosophy">Animations</a></li> -->
                            <!-- <li><a asp-page="./index" asp-route-url="border-radius" asp-fragment="philosophy">Border radius</a></li> -->
                            <!-- <li><a asp-page="./index" asp-route-url="shadows" asp-fragment="philosophy">Shadows</a></li> -->
                        </ul>
                    </li>
                    <li id="components">
                        <a class="skittles-components-navigation__topic" href="#components">
                            <span>Components</span>
                            <span class="skittles-components-navigation__icon">
                                <svg class="icon"><use xlink:href="#chevron-down"></use></svg>
                            </span>
                        </a>
                        <ul>
                            @{
                                foreach (var menu in MenuService.Components())
                                {
                                    <li><a href="/components/@menu.UrlPath#components">@menu.Label</a></li>
                                }
                            }
                        </ul>
                    </li>
                    <li><a class="skittles-components-navigation__topic" asp-page="./index" asp-route-url="author">Author</a></li>
                </ul>
            </nav>
        </div>
        <div class="skittles-components-settings">
            <a class="skittles-components-settings__link tooltip" data-tooltip="Application settings">
                <svg class="icon"><use xlink:href="#cog" /></svg>
            </a>
        </div>
    </aside>
    <section class="skittles-components-body">
        <article class="skittles-components-article">
            @RenderBody()
        </article>
    </section>

    <script src="~/highlight.pack.js"></script>
    <script type="text/javascript">
    setTimeout(() => {
        document.body.className = "skittles-components";
    }, 500);
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<partial name="_Icons" />